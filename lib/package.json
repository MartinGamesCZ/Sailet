{
  "name": "sailet",
  "version": "0.0.0",
  "module": "src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts"
    }
  },
  "type": "module",
  "private": false,
  "bin": {
    "sailet": "dist/cli/index.js",
    "st": "dist/cli/index.js"
  },
  "scripts": {
    "build:cli": "bun build --outfile=dist/cli/index.js --target=node cli/index.ts",
    "build:lib": "bun build --outfile=dist/lib/index.js --target=node src/index.ts",
    "build": "bun run build:cli && bun run build:lib"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/chalk": "^2.2.4",
    "@types/node": "^24.10.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "chalk": "^5.6.2"
  }
}
